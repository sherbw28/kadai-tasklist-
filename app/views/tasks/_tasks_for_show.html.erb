<% if tasks.any? %>
  <h1>Task一覧</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>状況</th>
        <th>Task</th>
      </tr>
    </thead>
    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate tasks %>
  </div>

<% end %>
